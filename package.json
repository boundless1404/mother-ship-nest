{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "npm install -g @nestjs/cli && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "orm:mig:gen": "sh -c 'npm run typeorm -- migration:generate src/config/database/migrations/$0 -d ./src/config/database/connections/default.ts'",
    "orm:mig:run": "sh -c 'npm run typeorm -- migration:run -d ./src/config/database/connections/default.ts'",
    "orm:mig:create": "sh -c 'npm run typeorm -- migration:create src/config/database/migrations/$0'",
    "create:db:entity": "sh -c 'typeorm-ts-node-esm entity:create src/$0'",
    "create:db:subscriber": "sh -c 'typeorm-ts-node-esm subscriber:create src/$0'",
    "create:db:migrations": "sh -c 'typeorm-ts-node-esm migration:create src/config/database/migrations/$0'",
    "generate:db:migrations": "sh -c 'typeorm-ts-node-esm migration:generate src/config/database/migrations/$0 -d src/config/database/connections/default.ts'",
    "run:db:migrations": "sh -c 'typeorm-ts-node-esm migration:run -d src/config/database/connections/default.ts'",
    "revert:db:migrations": "sh -c 'typeorm-ts-node-esm migration:revert -d src/config/database/connections/default.ts'",
    "show:db:migrations": "sh -c 'typeorm-ts-node-esm migration:show -d src/config/database/connections/default.ts'",
    "sync:db:schema": "sh -c 'typeorm-ts-node-esm schema:sync -d src/config/database/connections/default.ts'",
    "log:db:schema": "sh -c 'typeorm-ts-node-esm schema:log -d src/config/database/connections/default.ts'",
    "drop:db:schema": "typeorm-ts-node-esm schema:drop -d src/config/database/connections/default.ts",
    "query:db": "sh -c 'typeorm-ts-node-esm query $0 -d src/config/database/connections/default.ts'",
    "clear:db:migrations:cache": "sh -c 'typeorm-ts-node-esm cache:clear -d src/config/database/connections/default.ts'"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.2.2",
    "@nestjs/typeorm": "^9.0.1",
    "@sendgrid/mail": "^7.7.0",
    "@types/bcrypt": "^5.0.0",
    "@types/find-package-json": "^1.2.3",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "boolean": "^3.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "find-package-json": "^1.2.0",
    "helmet": "^6.1.1",
    "nestjs-pino": "^3.1.2",
    "pg": "^8.10.0",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "sib-api-v3-sdk": "^8.5.0",
    "typeorm": "^0.3.13",
    "until-promise": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
